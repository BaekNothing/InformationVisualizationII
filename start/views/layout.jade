    style.
        
      *{
        height : 100%;
        
        margin:0;
        padding:0;
        font-family: 'Noto Sans KR', sans-serif;
        font-weight: light;
        font-kerning: auto;
        line-height : 28.5px;
        letter-spacing: 0px;

        //overflow : hidden;
      }
      
      a:link { color: rgb(80,80,80); text-decoration: none;}
      a:visited { color: rgb(150,150,150); text-decoration: none;}
      a:hover { color: rgb(150,150,150); text-decoration: none;}
      
      nav {
        position : absolute;  
        z-index: 10;
        height : 0px;        
        width : 98%;
        
        transition : 0.4s;
      }
      
      #indexbutton{
        height : 0px;
        width : 0px;
        overflow : hidden;
      }
      
      #indexLine{
        width : 100%;
        height : 5px;
        background-color : rgb(150,150,150);
        margin-top : 8px;
      }

      .index{
        z-index : 9;
        float : left;
        position : fixed;
        width : 250px;
        height : auto;
        min-height : 100%;
        
        text-align : left;
        transition : 0.25s;
        overflow : hidden;
        
        border-right-width : 1px;
        border-right-style : dotted;
        border-right-color : black;
        
        
        background-color : white;
      }
      
      .index_P{
        margin-left : 45px;
        margin-bottom : 30px;
        font-size : 20px;
        
        color : rgb(150,150,150);
        
      }
      
      #home{
        margin-top : 150px;
      }
      
      #indexform{
        display : none;
      }
      
      @media (max-width:980px) {
        nav{
          height : 55px;
          padding-top : 10px;
          padding-left : 10px;
        }
        
        #indexbutton{
          margin-top : 5px;
          margin-left : 5px;
          height : 50px;
          width : 50px;
        }
        
        .index{
          position : absolute;
          width : 0px;
        }
        
        .index_P{
          font-size : 20px;
          margin-bottom : 40px;
        }
      }  

  body
    nav
      div#indexbutton
        hr#indexLine
        hr#indexLine
