      div#indexform
        - for(var i = 1; i < 7; i++ ){
            form(name='move' + i, action='/', method='POST')
              input(type='hidden', name='number', value = i)
        - }
    div.index
      div.index_Contents
        p.index_P#home 
          a(href='/') Home 
        p.index_P 
